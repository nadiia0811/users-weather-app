{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["../client/*"] 
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}